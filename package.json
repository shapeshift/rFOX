{
  "devDependencies": {
    "eslint": "8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "1.3.1",
    "pretty-quick": "^4.0.0",
    "simple-git-hooks": "^2.11.1"
  },
  "scripts": {
    "build-and-generate": "cd foundry && forge build && cd ../scripts/rewards-distribution && yarn install && yarn wagmi generate",
    "lint:sol": "npx prettier --write --plugin=prettier-plugin-solidity foundry/src/**/*.sol foundry/test/**/*.t.sol"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint:sol && yarn pretty-quick --staged"
  }
}
